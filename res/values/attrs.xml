<resources>
	
    <declare-styleable name="SwitchButton">
        <attr name="bg" format="reference"/>
        <attr name="slipImg" format="reference"/>
        <attr name="slipOn" format="boolean"></attr>
    </declare-styleable>
    
    <declare-styleable name="RegistView"><!-- 控件名称 -->
		<attr name="title" format="string" /><!--标题 -->
		<attr name="type" format="string" /><!-- 输入类型 -->
		<attr name="units" format="string" /><!-- 单位 -->
		<attr name="txtsize" format="dimension" /><!-- 字体大小 -->
		<attr name="txtcolor" format="color" /><!-- 字体颜色 -->
		<attr name="defaultvalue" format="string" /><!-- 默认值 -->
		<attr name="defaultsrc" format="reference|integer" /><!-- 默认值 -->
	</declare-styleable>
	
       <declare-styleable name="EditText"><!-- 控件名称 -->
		<attr name="pagecount" format="string" /><!-- 属性名称，类型 -->
		<attr name="listener" format="boolean" />
	</declare-styleable>
	
     <declare-styleable name="GridView"><!-- 控件名称 -->
		<attr name="numColumns" format="string" /><!-- 属性名称，类型 -->
		<attr name="horizontalSpacing" format="string" />
		<attr name="verticalSpacing" format="string"/>
	</declare-styleable>
	
     <attr name="auto_play" forMymat="boolean" />

    <declare-styleable name="SlidingSwitcherView">
        <attr name="auto_play" />
    </declare-styleable>
</resources>