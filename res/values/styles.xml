<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="transparent">
        <item name="android:windowBackground">@color/halftransparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@anim/enter</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 模糊 -->
    </style>
    
    <style name="Transparent">  
        <item name="android:windowBackground">@color/transparent</item>  
        <item name="android:windowIsTranslucent">true</item>  
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>  
    </style>  

    <style name="style_edt_login" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/edtview_login_bg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/login_edt</item>
    </style>

    <style name="style_btn_login_regist" parent="@android:style/MediaButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/smssdk_lv_tv_color</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_btn_login_registpart" parent="@android:style/MediaButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/color_white_grey</item>
        <item name="android:background">@drawable/bg_8_red</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_chkbtn_regist" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ckb_regist</item>
    </style>

    <style name="style_custom_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ckb_label</item>
    </style>

    <style name="style_title_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_label_text_name">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="style_label_worksadd_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="style_label_text_val">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/txt_click_bg</item>
    </style>

    <style name="style_label_worksadd_val">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/txt_click_bg</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="style_label_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/txt_click_bg</item>
    </style>

    <style name="style_label_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="style_label_text_grayclolor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/login_edt</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="style_tableitem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/background_registitem</item>
    </style>

    <style name="style_tableitem2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bg_white_orange</item>
    </style>

    <style name="style_me_infobtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_ranklist_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/rankinglist__bg</item>
    </style>

    <style name="style_slipbutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@drawable/switch_btn</item>
        <item name="android:checked">true</item>
        <item name="android:text"></item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="style_contentlayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:background">@drawable/background_registitem_t</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/chat_msg_listview_item_msg_textsize_true</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">

        <!-- <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item> -->
        <item name="android:layout_width">25dip</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/enter</item>
        <item name="android:windowExitAnimation">@anim/exit2</item>
    </style>

</resources>