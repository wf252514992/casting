<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <!--       判断时间间隔，如果时间间隔小于某个值则不显示 -->
    <TextView 
        android:id="@+id/othersidetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13-7-23 20:56"
        android:layout_below="@id/line1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#898989"
        android:visibility="gone"
        />
    <ImageView 
        android:id="@+id/othersidepic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_launcher"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/othersidetime"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
    <LinearLayout 
        android:id="@+id/othermessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_toRightOf="@id/othersidepic"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/othersidetime"
        android:layout_marginTop="20dp">
