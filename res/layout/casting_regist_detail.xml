<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mainbg_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/functemplate" />

    <LinearLayout
        android:id="@+id/contextlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/txt_companyintroduction"
            style="@style/style_label_text"
            android:text="@string/notifaction_company" />

        <ImageView
            android:id="@+id/img_regist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/renzheng" />

        <Button
            android:id="@+id/btn_regist_submit"
            style="@style/style_btn_login_registpart"
            android:text="@string/submit" />

    </LinearLayout>

</LinearLayout>